{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./game",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": ["game/images/"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["game/**/*"]
}